<% layout('layout') %>
<h1 class="mt-5 mb-5 text-center">Look at some of the hit movies you can rent tonight</h2>
<div class="container">
    <div class="row">
        <% for (let movie of allMovies) { %>
        <div class="position-relative col-2 mb-5 d-flex align-items-center justify-content-center">
            <% if (movie.poster) { %>
            <a href="/movies/<%= movie._id %>" class="stretched-link"><img src="<%= movie.poster %>" class="img-fluid rounded-pill"></a>
            <% } else { %>
            <a href="/movies/<%= movie._id %>" class="stretched-link fs-4"><%= movie.name %></a>
            <% } %>
        </div>
        <% } %>
    </div>
</div>
