<% layout('layout') %>
<h1>Want to rent <%= movie.name %></h1>

<% if (user && user.role === 'admin') { %>
<div class="d-flex">
    <a href="/movies/<%= movie._id %>/edit" class="btn btn-primary d-inline me-1">Update</a>
    <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST" class="d-inline">
        <button class="btn btn-danger">Delete</button>
    </form>
</div>
<% } %>

<div class="container mt-5">
    <div class="row">
        <div class=col-3>
            <img class="img-fluid" src="<%= movie.poster %>">

            <h3><%= movie.inventory %> in stock</h3>
            <div class="d-flex justify-content-around">

                <% if (user && movie.inventory > 0 && !(movie.renters.includes(user._id))) { %>
                <form action="/movies/<%= movie._id %>/rent?_method=PATCH" method="POST" class="d-inline mt-1"> 
                <button class="btn btn-primary">Rent <%= movie.name %> Now</button>
                </form>
                <% } %> 

                <% if (user && movie.inventory < 5 && movie.renters.includes(user._id)) { %>
                <form action="/movies/<%= movie._id %>/return?_method=PATCH" method="POST" class="d-inline mt-1">
                <button class="btn btn-danger">Return</button>
                </form>
                <% } %>

            </div>

            <h4>Genres</h4>
            <ul>
            <% for (let genre of movie.genres) { %>
                <li><a href="/movies/genre/<%= genre %>"><%= genre %></a></li>
            <% } %>
            </ul>
        </div>
        <div class="col-3">
            <h2><%= movie.name %></h2>
            <p class="card-text"><%= movie.overview %></p>
        </div>
        <div class="col-6">
            <% for (let review of movie.reviews) { %>
            <div class="card mb-3">
                <div class="card-body">
                    <div class="card-title">
                        <h3>Rated <%= review.rating %> by <%= review.author.username %></h3>
                    </div>
                    <p class="card-text"><%= review.body %></p>
                </div>

                <% if (user && review.author.equals(user._id)) { %>
                <form action="/movies/<%= movie._id %>/review/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger">Delete Review</button>
                </form>
                <% } %>


            </div>
            <% } %>
        </div>
        <div class="col-6">
            <h3>Leave a review for <%= movie.name %></h3>
            <form action="/movies/<%= movie._id  %>/review" method="POST" class="mb-3">
                <div class="mb-3">
                    <div class="col-4">
                        <label class="form-label" for="rating">Rating</label>
                        <input class="form-range" id="rating" name="rating" type="range" min="1" max="5">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="body" id="body" cols="30" rows="10"></textarea>
                </div>
                <button class="btn btn-success">Submit Review</button>
            </form>
        </div>
    </div>
</div>
