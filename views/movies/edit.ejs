<% layout('layout') %>

<div class="container mt-5">
    <h1 class="mb-3 mt-3 text-center">Update <%= movie.name %></h1>
    <div class="col-8 offset-2">
        <form action="/movies/<%= movie._id %>?_method=PATCH" method="POST">
            <label class="form-label" for="name">Movie Name</label>
            <input class="form-control" type="text" id="name" name="name" value="<%= movie.name %>" required>

            <label class="form-label mt-3" for="poster">Poster URL</label>
            <input class="form-control" type="text" id="poster" name="poster" value="<%= movie.poster %>" required>

            <label class="form-label mt-3" for="overview">Overview</label>
            <textarea class="form-control" id="overview" name="overview" rows="5" required><%= movie.overview %></textarea>

            <label class="form-label mt-3" for="genres">Genres</label>
            <input class="form-control" type="text" id="genres" name="genres" value="<%= movie.genres %>" required>

            <div class="mt-3">
                <button class="btn btn-primary">Update</button>
                <a class="btn btn-secondary" href="/movies/<%= movie._id %>">Cancel</a>
            </div>
        </form>
        <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST" class="mt-3">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
