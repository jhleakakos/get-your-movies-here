<% layout('layout') %>
<h1>Update <%= movie.name %></h1>

<div class="container mt-5">
    <form action="/movies/<%= movie._id %>?_method=PATCH" method="POST">
        <div class="mb-3">
            <label class="form-label" for="name">Movie Name</label>
            <input class="form-control" type="text" id="name" name="name" value="<%= movie.name %>" required>
        </div>

        <div class="mb-3">
            <label class="form-label" for="poster">Poster URL</label>
            <input class="form-control" type="text" id="poster" name="poster" value="<%= movie.poster %>" required>
        </div>

        <div class="mb-3">
            <label class="form-label" for="overview">Overview</label>
            <textarea class="form-control" id="overview" name="overview"required><%= movie.overview %></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label" for="genres">Genres</label>
            <input class="form-control" type="text" id="genres" name="genres" value="<%= movie.genres %>" required>
        </div>

        <div class="mb-3">
            <button class="btn btn-primary">Update</button>
            <a class="btn btn-secondary" href="/movies/<%= movie._id %>">Cancel</a>
        </div>
    </form>
    <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST">
        <button class="btn btn-danger">Delete</button>
    </form>
</div>