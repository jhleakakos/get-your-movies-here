<% layout('layout') %>

<div class="container mt-5">
    <h1 class="mb-3 mt-3 text-center">Update <%= show.name %></h1>
    <div class="col-8 offset-2">
        <form action="/shows/<%= show._id %>?_method=PATCH" method="POST">
                <label class="form-label" for="name">TV Show Name</label>
                <input class="form-control" type="text" id="name" name="name" value="<%= show.name %>" required>

                <label class="form-label mt-3" for="poster">Poster URL</label>
                <input class="form-control" type="text" id="poster" name="poster" value="<%= show.poster %>" required>

                <label class="form-label mt-3" for="summary">Summary</label>
                <textarea class="form-control" id="summary" name="summary" rows="5" required><%= show.summary %></textarea>

                <label class="form-label mt-3" for="genres">Genres</label>
                <input class="form-control" type="text" id="genres" name="genres" value="<%= show.genres %>" required>

            <div class="mt-3">
                <button class="btn btn-primary">Update</button>
                <a class="btn btn-secondary" href="/shows/<%= show._id %>">Cancel</a>
            </div>
        </form>
        <form action="/shows/<%= show._id %>?_method=DELETE" method="POST" class="mt-3">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
