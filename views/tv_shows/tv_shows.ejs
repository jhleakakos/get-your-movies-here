<% layout('layout') %>
<h1>Look At All These Great TV Shows</h1>

<h2>Look at some of the hit TV shows you can rent tonight</h2>
<div class="container">
    <div class="row">
        <% for (let show of allShows) { %>
        <div class="col-3 card">
            <img src="<%= show.poster %>">
            <div class="card-body">
                <div class="card-title">
                    <h3><%= show.name %></h3>
                </div>
                <p class="card-text"><%= show.summary %></p>
                <h4>Genres</h4>
                <ul class="list-group list-group-flush">
                <% for (let genre of show.genres) { %>
                    <li class="list-group-item"><%= genre %></li>
                <% } %>
                </ul>
                <a href="/shows/<%= show._id %>" class="btn btn-primary mt-5">See Details</a>
            </div>
        </div>
        <% } %>
    </div>
</div>